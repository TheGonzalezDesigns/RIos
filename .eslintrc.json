{
	"root": true,
	"parserOptions": {
		"ecmaVersion": 7,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"modules": true
		}
	},
	"env": {
		"browser": true,
		"es6": true,
		"meteor": true
	},
	"plugins": [
		"babel",
		"meteor"
	],
	"extends": [
		"eslint:recommended",
		"plugin:meteor/recommended"
	],
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["error", "double"],
		"no-unused-vars": 0,
		"indent": ["error", "tab"]
	}
}
