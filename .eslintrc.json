{
	"root": true,
	"parserOptions": {
		"ecmaVersion": 7,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"modules": true,
			"impliedStrict": true
		}
	},
	"env": {
		"browser": true,
		"es6": true,
		"meteor": true
	},
	"plugins": [
		"babel",
		"meteor",
		"react",
		"jsx-a11y"
	],
	"extends": [
		"eslint:recommended",
		"plugin:meteor/recommended",
		"plugin:react/recommended",
		"plugin:jsx-a11y/recommended"
	],
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["error", "double"],
		"indent": ["error", "tab"],
		"react/jsx-indent": [2, "tab"],
		"no-unused-vars": ["off"]
	}
}
